{
  "productName": "Project Graph",
  "version": "0.0.0-dev",
  "identifier": "liren.project-graph",
  "build": {
    "beforeDevCommand": "pnpm dev || bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build || bun build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Project Graph",
        "width": 1200,
        "height": 800,
        "decorations": false,
        "transparent": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": []
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "deb", "dmg"],
    "category": "Productivity",
    "longDescription": "A simple tool to create topology diagrams.",
    "shortDescription": "Diagram creator",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "displayLanguageSelector": true,
        "languages": ["SimpChinese", "TradChinese", "English"],
        "sidebarImage": "nsis/left.bmp",
        "headerImage": "nsis/project-graph-install.bmp",
        "installerHooks": "nsis/installer.nsh"
      }
    }
  },
  "plugins": {
    "cli": {
      "description": "A simple tool to create topology diagrams.",
      "args": [
        {
          "name": "path",
          "index": 1,
          "takesValue": true
        }
      ]
    }
  }
}

{
  "$schema": "https://turbo.build/schema.json",
  "envMode": "loose",
  "remoteCache": {
    "timeout": 60,
    "uploadTimeout": 120
  },
  "tasks": {
    "build": {
      "dependsOn": ["^build", "type-check"]
    },
    "@pg/app#build": {
      "inputs": ["src/**/*", "*.{ts,tsx,html,css}"],
      "outputs": ["dist/**"]
    },
    "@pg/docs#build": {
      "inputs": ["**/*"],
      "outputs": ["out"]
    },
    "@pg/ui#build": {
      "outputs": ["dist/**"]
    },
    "@pg/app#tauri:build": {
      "dependsOn": ["build"],
      "inputs": ["src-tauri/**/*"],
      "outputs": ["src-tauri/target/release/**"]
    },
    "@pg/app#tauri:build:android": {
      "dependsOn": ["build"],
      "inputs": ["src-tauri/**/*"],
      "outputs": ["src-tauri/target/*-android/release/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "@pg/app#tauri:dev": {
      "with": ["dev", "@pg/docs#dev"],
      "outputs": ["app/src-tauri/target/debug/**"],
      "persistent": true
    },
    "type-check": {
      "inputs": ["app/src/**/*.tsx"]
    },
    "@pg/ui#build-storybook": {
      "outputs": ["packages/ui/storybook-static/**"]
    }
  }
}

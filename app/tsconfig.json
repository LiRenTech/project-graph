{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true, // 不检查.d.ts文件

    // 打包配置
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // 因为vite使用esbuild打包，tsc只负责类型检查，所以不需要生成js文件
    "jsx": "react-jsx",

    // 类型检查
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    // 其他
    "experimentalDecorators": true // 开启装饰器
  },
  "include": [
    "src",
    "tests/deco.test.tsx",
    "tests/lruCache.test.tsx",
    "tests/mod.test.tsx",
    "tests/monoStack.test.tsx",
    "tests/parseMarkdownToJSON.test.tsx",
    "tests/validUrl.test.tsx",
    "tests/vector.test.tsx",
    "tests/vitest.test.tsx"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
